<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Control whether status bar should distinguish HSPA data icon from UMTS
        data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Doze: does this device support STATE_DOZE and STATE_DOZE_SUSPEND?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Whether SystemUI ignores notch -->
    <bool name="hide_view_behind_notch">true</bool>

    <!-- Show battery icon in the QS Panel instead of in the header -->
    <bool name="config_batteryInQSPanel">false</bool>

    <!-- FPSInfoService Fps file path -->
    <string name="config_fpsInfoSysNode" translatable="false">/sys/devices/virtual/graphics/fb0/measured_fps</string>

    <!-- The CPU temperature sensor path, defaults to empty -->
    <string name="config_cpuTempSensor" translatable="false">/sys/class/thermal/thermal_zone0/temp</string>

    <!-- The CPU temperature divider, if needed -->
    <integer name="config_cpuTempDivider" translatable="false">1000</integer>

    <!-- System icon area layout weight -->
    <item name="system_icon_area_weight" format="float" type="integer">1.25</item>
</resources>
